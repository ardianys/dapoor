<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_step"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/material_card_edge_margin"
        android:layout_marginRight="@dimen/material_card_edge_margin"
        android:layout_marginTop="@dimen/material_card_edge_margin"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="@dimen/material_card_corner_radius"
        card_view:cardElevation="4dp">
        <TextView
            android:id="@+id/tv_step_short_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step short description"
            android:textSize="@dimen/material_typography_dense_body_1_text_size"
            android:padding="@dimen/layout_spacing"/>
    </android.support.v7.widget.CardView>
</LinearLayout>